rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Verejné číselníky: read pre všetkých, write len admin
    match /artifacts/{appId}/public/data/referenceData/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Údaje používateľa + podkolekcie
    match /artifacts/{appId}/users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
    match /artifacts/{appId}/users/{userId}/{collection=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
  }
}
